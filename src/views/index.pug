doctype html
head
  meta(charset='utf-8')
  link(rel='stylesheet' href='styles.css')
  title Consultas SQL
body
  center
    label.titulo Escriba su consulta aqui
  form(action='/' method='post')
    textarea(autofocus='' name='query' rows='8' cols='80' placeholder='Select ... From ...')
    center
      button(type='submit' name='button' onclick='boton()') Consultar
  script(src='app.js')
  center
    h1 Resultados
  center
    if (results)
      table.table
        thead
          each col in fields
            th=col.name
        tbody
          each row in results
            tr
              each col in fields
                td=row[col.name]
